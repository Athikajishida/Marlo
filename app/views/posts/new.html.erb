<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-2xl">
    <h2 class="text-3xl font-bold mb-6 text-white">Create New Post</h2>
    
    <%= form_with(model: @post, local: true, 
      html: { class: "bg-gray-800 p-8 rounded-lg shadow-xl" }) do |form| %>
      
      <% if @post.errors.any? %>
        <div class="bg-red-600 text-white p-4 rounded mb-4">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, class: "block text-teal-400 mb-2" %>
        <%= form.text_field :title, 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>

      <div class="mb-4">
        <%= form.label :body, class: "block text-teal-400 mb-2" %>
        <%= form.text_area :body, rows: 6, 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>

      <div class="mb-4">
        <%= form.label :image, class: "block text-teal-400 mb-2" %>
        <%= form.file_field :image, 
          accept: 'image/*', 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>

      <div class="actions">
        <%= form.submit "Create Post", 
          class: "w-full bg-teal-600 text-white py-2 rounded hover:bg-teal-500 transition duration-300" %>
      </div>
    <% end %>
  </div>
</div>