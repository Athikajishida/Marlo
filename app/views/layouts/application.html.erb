<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title> MARLO </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

 <body class="bg-gray-900 text-white">
    <nav class="bg-gray-800 shadow-md">
      <div class="container mx-auto px-4 py-2 flex justify-between items-center">
        <%= link_to "MARLO.", root_path, class: "text-2xl font-bold" %>
        <div class="space-x-4">
          <% if user_signed_in? %>
            <%= link_to "Posts", posts_path, class: "text-teal-400 hover:text-teal-300" %>
            <%= link_to "New Post", new_post_path, class: "text-teal-400 hover:text-teal-300" %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-red-500 hover:text-red-400" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "text-teal-400 hover:text-teal-300" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "text-green-400 hover:text-green-300" %>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="container mx-auto mt-4 px-4">
      <% flash.each do |type, msg| %>
        <div class="alert alert-<%= type %> mb-4 p-3 rounded <%= type == 'notice' ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %>">
          <%= msg %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>


