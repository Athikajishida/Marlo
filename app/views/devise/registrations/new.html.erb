<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md">
    <h2 class="text-3xl font-bold mb-6 text-white">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
      html: { class: "bg-gray-800 p-8 rounded-lg shadow-xl" }) do |f| %>
      
      <%= render "devise/shared/error_messages", resource: resource, 
        class: "bg-red-600 text-white p-4 rounded mb-4" %>
      
      <div class="mb-4">
        <%= f.label :username, class: "block text-teal-400 mb-2" %>
        <%= f.text_field :username, 
          autofocus: true, 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-teal-400 mb-2" %>
        <%= f.email_field :email, 
          autocomplete: "email", 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :password, class: "block text-teal-400 mb-2" do %>
          Password 
          <% if @minimum_password_length %>
            <span class="text-sm text-gray-400 ml-2">
              (<%= @minimum_password_length %> characters minimum)
            </span>
          <% end %>
        <% end %>
        <%= f.password_field :password, 
          autocomplete: "new-password", 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>
      
      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-teal-400 mb-2" %>
        <%= f.password_field :password_confirmation, 
          autocomplete: "new-password", 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up", 
          class: "w-full bg-teal-600 text-white py-2 rounded hover:bg-teal-500 transition duration-300" %>
      </div>
    <% end %>
    
    <div class="mt-6 text-center">
      <%= render "devise/shared/links", 
        class: "text-teal-400 hover:text-teal-300 underline" %>
    </div>
  </div>
</div>