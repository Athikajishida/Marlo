<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md">
    <h2 class="text-3xl font-bold mb-6 text-white">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
      html: { class: "bg-gray-800 p-8 rounded-lg shadow-xl" }) do |f| %>
      
      <div class="mb-4">
        <%= f.label :email, class: "block text-teal-400 mb-2" %>
        <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-teal-400 mb-2" %>
        <%= f.password_field :password, 
          autocomplete: "current-password", 
          class: "w-full px-3 py-2 bg-gray-700 text-white border border-gray-600 rounded focus:outline-none focus:border-teal-400" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, 
            class: "mr-2 bg-gray-700 border-gray-600 text-teal-400 focus:ring-teal-500" %>
          <%= f.label :remember_me, class: "text-white" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", 
          class: "w-full bg-teal-600 text-white py-2 rounded hover:bg-teal-500 transition duration-300" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links", 
        class: "text-teal-400 hover:text-teal-300 underline" %>
    </div>
  </div>
</div>